                  //  li.list-group-item
                   //     input.pull-left(type='checkbox', ng-checked="true", ng-model='selToDeploy')
                     //   p {{dev.name}}
       
            
        
    .modal-footer
        button.btn.btn-primary(ng-click="deploy()") Deploy
        button.btn.btn-primary(ng-click="close()") Stage more